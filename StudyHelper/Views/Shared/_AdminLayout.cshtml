<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudyHelper Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        .admin-container {
            margin-top: 20px;
        }
        .admin-header {
            background-color: #343a40;
            color: white;
            padding: 15px 0;
            margin-bottom: 30px;
        }
        .admin-nav {
            display: flex;
            gap: 20px;
        }
        .admin-nav a {
            color: white;
            text-decoration: none;
            font-weight: 500;
        }
        .admin-nav a:hover {
            color: #adb5bd;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="admin-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 style="color: #8795A2;" >StudyHelper Admin</h1>
                <div class="admin-nav">
                    <a asp-controller="Admin" asp-action="Index">Головна</a>
                    <a asp-controller="Account" asp-action="Logout">Вийти</a>
                </div>
            </div>
        </div>
    </header>

    <div class="container admin-container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>